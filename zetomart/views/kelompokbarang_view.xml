<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- zetomart_kelompokbarang tree view -->
<record id="zetomart_kelompokbarang_view_tree" model="ir.ui.view">
    <field name="name">zetomart.kelompokbarang.view.tree</field>
    <field name="model">zetomart.kelompokbarang</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="kode_kelompok"/>
            <field name="kode_rak"/>
            <field name="jml_item"/>
            <field name="daftar"/>
        </tree>
    </field>
</record>

<!-- zetomart_kelompokbarang form view -->
<record id="zetomart_kelompokbarang_view_form" model="ir.ui.view">
    <field name="name">zetomart.kelompokbarang.view.form</field>
    <field name="model">zetomart.kelompokbarang</field>
    <field name="arch" type="xml">
        <form string="Kelomppok Barang">
            <sheet>
                <group name='kelompok' string='Letak Kelompok'>
                    <field name="name"/>
                    <field name="kode_kelompok"/>
                    <field name="jml_item"/>
                </group>
                <group name='rak' string='Letak rak'>
                    <field name="kode_rak"/>
                    <field name="barang_ids"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<!-- zetomart_kelompokbarang action window -->
<record id="zetomart_kelompokbarang_action" model="ir.actions.act_window">
    <field name="name">Kelompok Barang</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">zetomart.kelompokbarang</field>
    <field name="view_mode">tree,form</field>
</record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="zetomart_kelompokbarang_menu_act" 
              name="Kelompok Barang" 
              parent="zetomart_barang_menu_categ" 
              action="zetomart_kelompokbarang_action" 
              sequence="10"/>

</odoo>
